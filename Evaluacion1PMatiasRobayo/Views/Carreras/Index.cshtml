@model IEnumerable<Evaluacion1PMatiasRobayo.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Tabla Carreras</h1>

<p>
    <a asp-action="Create">Agregar nueva carrera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero_semestres)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_carrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.campus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero_semestres)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
